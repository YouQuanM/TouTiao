page{
  overflow: hidden;
  width:100%;
  height:100%;
}

.bg_img{
  position:absolute;
  top:0;
  z-index:-1;
  overflow: hidden;
}

.rule{
  width:110rpx;
  height:45rpx;
  font-size:24rpx;
  text-align:center;
  line-height:45rpx;
  padding:0rpx 10rpx 0rpx 15rpx;
  color:#f0eeff;
  background:#ec5b34;
  border-radius: 100rpx 0rpx 0rpx 100rpx;
  float:right;
  margin-top:30rpx;
}

.btn_text{
  width:390rpx;
  height:96rpx;
  color:#fff;
  font-size:34rpx;
  line-height:96rpx;
  text-align:center;
  position:absolute;
  top:810rpx;
  left:178rpx;
}

.bg_unicorn{
  width: 114rpx;
  position:absolute;
  top:533rpx;
  left:111rpx;
  z-index:1;
}

.bg_egg{
  width: 33rpx;
  height: 30rpx;
  position:absolute;
  top:394rpx;
  left:230rpx;
  z-index:0;
}

.bg_box{
  width: 367rpx;
  height: 366rpx;
  position:absolute;
  top:360rpx;
  left:194rpx;
}

.bg_box{
  animation:bounce 2s;
  position: absolute;
}
.bg_egg{
  animation:egg 2s;
  position: absolute;
}

@keyframes bounce{
  0%,20%,50%,80%,100%{height: 366rpx;top:360rpx;}
  60%,40%{height: 406rpx;top:320rpx;}
}

@keyframes egg{
  0%,20%,50%,80%,100%{top:394rpx;}
  60%,40%{top:360rpx;}
}

.mask{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background: #000;
  opacity: 0.5;
  z-index: 10;
}

.active_rule image{
  width: 676rpx;
  height: 954rpx;
}

.active_rule{
  position: absolute;
  z-index: 11;
  top:50%;
  left:50%;
  margin-left:-338rpx;
  margin-top:-477rpx;
}

.rule_word{
  position:absolute;
  top:150rpx;
  left:88rpx;
  font-size:26rpx;
}

.rule_word view{
  margin-bottom: 40rpx
}

.close{
  width:60rpx;
  height:60rpx;
  position:absolute;
  top:903rpx;
  left:50%;
  margin-left:-35rpx;
}

.receive_mask{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  background: #151131;
  opacity: 0.9;
  z-index: 10;
}

.receive_success{
  position:absolute;
  top:0;
  width:100%;
  height:100%;
  z-index:11;
}

