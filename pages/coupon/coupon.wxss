page{
  height: 100%;
  background: #F7F8F9;
}

.swiper-tab {
  width: 100%;
  text-align: center;
  line-height: 80rpx;
  background-color:white;
  position:fixed;
  top:0;
  z-index:10;
}

.swiper-tab-list {
  font-size: 30rpx;
  display: inline-block;
  width: 33%;
  color: #777;
  border-bottom: 0rpx;
  position:relative;
  z-index:10;
}

.on {
  color: #3DBCC6;
}

.swiper-box {
  display: block;
  height: 100%;
  width: 100%;
  overflow: hidden;
}

.swiper-box view {
  text-align: center;
}

.borderLine{
  width:50%;
  margin:0 auto;
}

.active{
  border-bottom:4rpx solid #3dbcc6;
  color:#3dbcc6;
}

.top_part{
  display:flex;
}


.noUse{
  padding: 30rpx 30rpx;
  position:absolute;
  top:80rpx;
}

.overdue,.used{
  padding: 30rpx 30rpx;
  position:absolute;
  top:50rpx;
}

.inputstyle{
  width:346rpx;
  height:60rpx;
  border:1px solid #e5e5e5;
  border-radius:10rpx 0 0 10rpx;
  padding-left: 50rpx;
  font-size: 28rpx;
}

.exchange{
  width:156rpx;
  height:60rpx;
  background:#ccc;
  font-size:26rpx;
  color:#fff;
  border-radius:0 10rpx 10rpx 0;
  text-align:center;
  line-height:60rpx;
}

.inpClass{
  font-size: 26rpx;
  color: #ccc;
}

.explain image{
  width: 30rpx;
  height: 30rpx;
  margin-top:7rpx;
  margin-right:7rpx;
}

.explain view{
  font-size: 28rpx;
  color: #999;
}

.addCoupon,.explain{
  display:flex;
}

.explain{
  margin-left: 40rpx;
  margin-top: 10rpx;
}

.djq,.xjq,.zkq{
