  position:relative;
  top:45rpx;
  left:-10px;
}

.hidden{
  position:fixed;
  width:100%;
  height:100%;
  top:0px;
  background:rgba(0,0,0,0.4);
  z-index: 5;
}

.yzm-img{
  width:80%;
