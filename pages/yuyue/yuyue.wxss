}

.confirm{
  text-align:center;
  width:90%;
  background:#3dbcc6;
  height:80rpx;
  color:#fff;
  line-height:80rpx;
  border-radius:10rpx;
  margin:0 auto;
  margin-top:100rpx;
}

.err-info{
  font-size:28rpx;
  color:#ef0d18;
  text-align:center;
  position:relative;
   top:40rpx; 
}

.inp-class{
