.page{
  padding: 20rpx 30rpx;
}

.search_top{
  position:relative;
  width:85%;
  /* margin:0 auto; */
  /* left:60rpx;
  top:-98rpx; */
}

.search_top image{
  position:absolute;
  left:40rpx;
  top:16rpx;
  display:block;
  width:30rpx;
  height:28rpx;
  z-index:3;
}

.search-inp{
  width: 100%;
  height:64rpx;
  font-size: 24rpx;
  padding-left: 90rpx;
  border-radius: 50rpx;
  border:1px solid #E5E5E5;
  background-color: #F6F7F8;
}

.search_top text{
  float:right;
  position:relative;
  left:100rpx;
  font-size:30rpx;
  color:#249fad;
  top:-50rpx;
}

.tryTag{
  margin-bottom:35rpx;
  border-bottom:1px solid #ebebeb;
  margin-top:50rpx;
}

 .tag-part{
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: flex-start;
} 

.tag-text{
  font-size:30rpx;
  font-weight:bold;
  margin-bottom:30rpx;
  display:block;
}

.actTag{
  border:1rpx solid #3dbcc5;
  background: #3dbcc5;
  width:129rpx;
  font-size:24rpx;
  color: #fff;
  border-radius:50rpx;
  padding:10rpx 10rpx;
  margin-right:20rpx;
  margin-bottom:30rpx;
  text-align:center;
} 

.btn-select{
  border:1rpx solid #e4e8eb;
  min-width:128rpx;
  font-size:24rpx;
  color: #333;
  border-radius:50rpx;
  padding:10rpx 10rpx;
  margin-right:20rpx;
  margin-bottom:30rpx;
  text-align:center;
} 

.btn-select:active{
  background: #f2f2f2;
}







